  setScreen("AS5");
});

onEvent("BACK9", "click", function( ) {
  setScreen("Sphere1");
});

onEvent("Calculate9", "click", function( ) {
  setText("Output9", 1.3333 * (3.142 * Math.pow(getNumber("R3"), 3)));
});

onEvent("Calculate10", "click", function( ) {
  setText("Output10", 4 * (3.142 * Math.pow(getNumber("R4"), 2)));
});


onEvent("BACK11", "click", function( ) {
  setScreen("Cylinder1");
});

onEvent("Calculate11", "click", function( ) {
  setText("Output11", 3.142 * (Math.pow(getNumber("R5"), 2) * getNumber("H7")));
});

onEvent("Calculate12", "click", function( ) {
  setText("Output12", (2 * 3.142) * (getNumber("R6") * getNumber("H8")) + 2 * (3.142 * Math.pow(getNumber("R6"), 2)));
});
